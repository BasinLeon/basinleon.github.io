# BASIN::NEXUS Secrets Configuration
# ═══════════════════════════════════════════════════════════════
# 
# HOW TO USE:
# 1. Go to your Streamlit Cloud app settings
# 2. Navigate to "Secrets" section
# 3. Copy the contents below (without comments) and paste
# 4. Replace placeholder values with your actual keys
#
# ═══════════════════════════════════════════════════════════════

# REQUIRED: Primary LLM Provider
GROQ_API_KEY = "gsk_your_groq_api_key_here"

# OPTIONAL: Additional LLM Providers
# OPENAI_API_KEY = "sk-your_openai_key_here"
# GOOGLE_API_KEY = "your_google_api_key_here"
# ANTHROPIC_API_KEY = "sk-ant-your_anthropic_key_here"

# OPTIONAL: Google Suite Integration
# GOOGLE_SERVICE_ACCOUNT_JSON = '{"type": "service_account", ...}'

# OPTIONAL: News/Signal APIs
# NEWS_API_KEY = "your_newsapi_key_here"
